<div class = "items">
    <div class = "item">
        <div>
            <h3>Imagem da receita:</h3>
        </div>
        <div>
            <input 
                type = "url"
                name = "img_url"
                placeholder = "http://"
                value = "{{recipe.avatar_url}}"
            />
        </div>
    </div>
    <div class="item">
        <div>
            <h3>Nome da receita:</h3>
        </div>
        <div>
            <input 
                type = "text"
                name = "title"
                value = "{{recipe.title}}"
            />
        </div>
    </div>  
    <div class="item">
        <div>
            <h3>Criado por:</h3>
        </div>
        <div>
            <input 
                type = "text"
                name = "chef"
                value = "{{recipe.chef}}"
            />
        </div>
    </div>  
    <div class="item" id="ingredients">
        <div>
            <h3>Ingredientes:</h3>
        </div>
        {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input type="text" name="ingredients[]" value="{{ingredient}}">
        </div>
        {% else %}
        <div class="ingredient">
            <input type="text" name="ingredients[]" value="" >
        </div>
        {% endfor %}
        <button  type="button" class="add-ingredient" >Adicionar novo ingrediente</button>
    </div>
    <div class="item" id="preparation">
        <div>
            <h3>Modo de preparo:</h3>
        </div>
        {% for preparation in recipe.preparations %}
        <div class="preparations">
            <input type="text" name="preparations[]" value="{{preparation}}" >
        </div>
        {% else %}
        <div class="preparation">
            <input type="text" name="preparation[]" value="">
        </div>
        {% endfor %}
        <button  type="button" class="add-preparation" >Adicionar novo preparo</button>
    </div>
    <div class="item">
        <h3>Informações adicionais:</h3>
        <div>
            <textarea
            name="add-info" 
            cols="28" 
            rows="10" 
            >{{recipe.add-info}}</textarea>
        </div>
    </div>
</div>
<script src="/scripts/add-infos.js"></script>